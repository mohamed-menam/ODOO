<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="productcategory_id" model="ir.actions.act_window">
        <field name="name">Product Class</field>
        <field name="res_model">darbelal.productcategory</field>
        <field name="view_mode">tree,form</field>
    </record>


    <record id="productcategory_tree" model="ir.ui.view">
        <field name="name">Product Class</field>
        <field name="model">darbelal.productcategory</field>
        <field name="arch" type="xml">
            <tree string="Master">
                <field name="name" />

            </tree>
        </field>
    </record>

    <record id="productcategory_from" model="ir.ui.view">
        <field name="name">Product Class</field>
        <field name="model">darbelal.productcategory</field>
        <field name="arch" type="xml">
            <form string="Master">
                <sheet>
                    <group col="2">
                        <field name="name" />

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem name="Product Class" id="productcategory_menu_id" parent="Master_Data_id"
        action="productcategory_id" sequence="10" />


</odoo>